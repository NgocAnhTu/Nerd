<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/khung3"
    android:elevation="5dp">

    <TextView
        android:id="@+id/txtTenbaihoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sinh học và tâm sinh lý ảnh hưởng đến đâu"
        android:textSize="15dp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/time"/>
        <TextView
            android:id="@+id/txtGio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:00"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="200dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lich"/>
            <TextView
                android:id="@+id/txtNgay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31/12/2021"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/txtNameGV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bùi Văn Thịnh"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:gravity="left"/>
    </LinearLayout>

</LinearLayout>