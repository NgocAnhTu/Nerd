<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imv_back"
                    android:layout_width="28sp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Khảo sát"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:text="ĐÁNH GIÁ GIÁO VIÊN"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="1. Kỹ năng sư phạm"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="1.1 Giáo viên tạo hứng thú trong buổi học"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10">

                            <RadioButton
                                android:id="@+id/radio_1_1_a"
                                android:text="Rất hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:layout_weight="5"/>

                            <RadioButton
                                android:id="@+id/radio_1_1_b"
                                android:text="Hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10">

                            <RadioButton
                                android:id="@+id/radio_1_1_c"
                                android:text="Không hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"/>

                            <RadioButton
                                android:id="@+id/radio_1_1_d"
                                android:text="Rất không hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5" />

                        </TableRow>

                    </TableLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="1.2 Giáo viên giảng bài dễ hiểu"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10">

                            <RadioButton
                                android:id="@+id/radio_1_2_a"
                                android:text="Rất hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:layout_weight="5"/>

                            <RadioButton
                                android:id="@+id/radio_1_2_b"
                                android:text="Hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10">

                            <RadioButton
                                android:id="@+id/radio_1_2_c"
                                android:text="Không hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"/>

                            <RadioButton
                                android:id="@+id/radio_1_2_d"
                                android:text="Rất không hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5" />

                        </TableRow>

                    </TableLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="2. Kỹ năng tương tác"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="2.1 Giáo viên giảng bài dễ hiểu"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10">

                            <RadioButton
                                android:id="@+id/radio_2_1_a"
                                android:text="Rất hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:layout_weight="5"/>

                            <RadioButton
                                android:id="@+id/radio_2_1_b"
                                android:text="Hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10">

                            <RadioButton
                                android:id="@+id/radio_2_1_c"
                                android:text="Không hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"/>

                            <RadioButton
                                android:id="@+id/radio_2_1_d"
                                android:text="Rất không hài lòng"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>