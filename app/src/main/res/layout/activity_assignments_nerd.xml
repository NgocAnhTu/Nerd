<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assignments_Nerd">

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/Assignments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--                    <include-->
                    <!--                        layout="@layout/activity_assignments"-->
                    <!--                        />-->
                    <ImageButton
                        android:id="@+id/imbtn_BaiTap1"
                        android:src="@drawable/assignments"
                        android:backgroundTint="#0000"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:onClick="playStuff"
                        tools:ignore="OnClick" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Proofread"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="10dp">
                        <Button
                            android:id="@+id/btn_DaSua"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Đã sửa"
                            android:textColor="@color/white"
                            app:backgroundTint="@null"
                            android:textSize="11sp"
                            android:background="@drawable/border"
                            android:layout_marginRight="10dp"
                            android:gravity="center"/>
                        <Button
                            android:id="@+id/btn_DangDoiSua"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Đang đợi sửa"
                            app:backgroundTint="@null"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:background="@drawable/khung_border"
                            android:gravity="center"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/imbtn_Proofread1"
                        android:src="@drawable/assignments"
                        android:backgroundTint="#0000"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:onClick="playStuff"
                        tools:ignore="OnClick" />


                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>