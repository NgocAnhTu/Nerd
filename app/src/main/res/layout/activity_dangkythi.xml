<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dangkythi"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9CDFE5">

        <ImageButton
            android:id="@+id/imbtn_Back"
            android:background="#9CDFE5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_back_25"/>

        <TextView
            android:layout_marginStart="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký thi Tiếng Anh"
            android:textSize="22sp"
            android:textColor="#000"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        >
        <ImageView

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/notfound" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có yêu cầu đăng ký nào"
            android:textSize="22sp"
            android:textColor="#000"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký thi"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:backgroundTint="#1B4965"/>
    </LinearLayout>
</LinearLayout>